find_package(ExtraLibDir)

FIND_LIB_IN_EXTRALIBS(LIBVORBIS *vorbis* include lib)

SET(LIBVORBIS_FOUND FALSE)
SET(LIBVORBIS_DEBUG_FOUND FALSE)
SET(LIBVORBISFILE_FOUND FALSE)
SET(LIBVORBISFILE_DEBUG_FOUND FALSE)

Find_Path(LIBVORBIS_INCLUDE_DIR
	vorbis/codec.h
	/usr/include/ /usr/local/include/
	${LIBVORBIS_EXTRALIB_INCLUDE_PATHS}
)

Find_Library(LIBVORBIS_LIBRARY
	vorbis
	/usr/lib /usr/local/lib
	${LIBVORBIS_EXTRALIB_LIBRARY_PATHS}
)

Find_Library(LIBVORBIS_DEBUG_LIBRARY
	vorbisd
	/usr/lib /usr/local/lib
	${LIBVORBIS_EXTRALIB_LIBRARY_PATHS}
)

IF(NOT MSVC) # Assume non-MSVC compilers don't care about different runtimes
	SET(LIBVORBIS_DEBUG_LIBRARY ${LIBVORBIS_LIBRARY})
ENDIF(NOT MSVC)

IF(LIBVORBIS_INCLUDE_DIR AND LIBVORBIS_LIBRARY AND LIBVORBIS_DEBUG_LIBRARY)
	SET(LIBVORBIS_FOUND TRUE)
	SET(LIBVORBIS_DEBUG_FOUND TRUE)
	MESSAGE(STATUS "Found vorbis library")
ENDIF(LIBVORBIS_INCLUDE_DIR AND LIBVORBIS_LIBRARY AND LIBVORBIS_DEBUG_LIBRARY)

Find_Path(LIBVORBISFILE_INCLUDE_DIR
	vorbis/vorbisfile.h
	/usr/include/ /usr/local/include/
	${LIBVORBIS_INCLUDE_DIR}
	${LIBVORBIS_EXTRALIB_INCLUDE_PATHS}
)

Find_Library(LIBVORBISFILE_LIBRARY
	vorbisfile
	/usr/lib /usr/local/lib
	${LIBVORBIS_EXTRALIB_LIBRARY_PATHS}
)

Find_Library(LIBVORBISFILE_DEBUG_LIBRARY
	vorbisfiled
	/usr/lib /usr/local/lib
	${LIBVORBIS_EXTRALIB_LIBRARY_PATHS}
)

IF(LIBVORBISFILE_INCLUDE_DIR AND LIBVORBISFILE_LIBRARY AND LIBVORBISFILE_DEBUG_LIBRARY)
	SET(LIBVORBISFILE_FOUND TRUE)
	SET(LIBVORBISFILE_DEBUG_FOUND TRUE)
	MESSAGE(STATUS "Found vorbisfile library")
ENDIF(LIBVORBISFILE_INCLUDE_DIR AND LIBVORBISFILE_LIBRARY AND LIBVORBISFILE_DEBUG_LIBRARY)
